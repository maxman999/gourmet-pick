<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kjy.gourmet.mapper.UserMapper">

    <insert id="insertUser" parameterType="com.kjy.gourmet.domain.user.User">
        insert into user(email, nickname, role)
        values (#{email}, #{nickname}, #{role});
    </insert>

    <insert id="insertOrUpdateUser" parameterType="com.kjy.gourmet.domain.user.User">
        insert into user(email, nickname, role)
        values (#{email}, #{nickname}, #{role})
        on duplicate key update email    = VALUES(email),
                                nickname = VALUES(nickname),
                                role     = VALUES(role)
    </insert>

    <select id="selectUserById" parameterType="long" resultType="com.kjy.gourmet.domain.user.User">
        select *
        from user
        where id = #{id};
    </select>

    <select id="selectUserByEmail" parameterType="String" resultType="com.kjy.gourmet.domain.user.User">
        select *
        from user
        where email = #{email};
    </select>

    <delete id="deleteUserById" parameterType="long">
        delete
        from user
        where id = #{userId}
    </delete>
</mapper>